{% extends 'base.html.twig' %}

{% block title %}Users index{% endblock %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <h1 class="font-weight-light mb-4">Users index</h1>

            <table class="table table-striped">
                <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Email</th>
                    <th scope="col">Roles</th>
                    <th scope="col">Name</th>
                    <th scope="col">actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        <td>{{ user.name }}</td>
                        <td>
                            <a href="{{ path('users_show', {'id': user.id}) }}">show</a>
                            <a href="{{ path('users_edit', {'id': user.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="font-weight-light">Aucun utilisateur trouv√© !</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('users_new') }}">Create new</a>
        </div>
    </div>
{% endblock %}
