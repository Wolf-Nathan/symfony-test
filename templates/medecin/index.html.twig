{% extends 'base.html.twig' %}

{% block title %}Medecin index{% endblock %}

{% block body %}

    <div class="jumbotron">
        <div class="container">
            <h1 class="font-weight-light mb-4">Medecin index</h1>
            <table class="table table-striped">
                <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Matricule</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Prenom</th>
                    <th scope="col">actions</th>
                </tr>
                </thead>
                <tbody>
                {% for medecin in medecins %}
                    <tr>
                        <td>{{ medecin.id }}</td>
                        <td>{{ medecin.matricule }}</td>
                        <td>{{ medecin.nom }}</td>
                        <td>{{ medecin.prenom }}</td>
                        <td>
                            <a href="{{ path('medecin_show', {'id': medecin.id}) }}">show</a>
                            <a href="{{ path('medecin_edit', {'id': medecin.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="font-weight-light">Aucun médecin trouvé !</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>


            <a href="{{ path('medecin_new') }}">Create new</a>
        </div>
    </div>
{% endblock %}
