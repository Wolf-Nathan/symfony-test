{%  extends 'base.html.twig' %}

{% block title %}
    Liste des patients
{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Liste des patients</h1>
        <table>
            <tr>
                <td>Nom</td>
                <td>Prénom</td>
                <td>Date de naissance</td>
                <td>Numéro de sécurité sociale</td>
            </tr>
            {% for a in patients %}
                <tr>
                    <td>{{ a.nom }}</td>
                    <td>{{ a.prenom }}</td>
                    <td>{{ a.dateNaissance|date('d/m/Y') }}</td>
                    <td>{{ a.numSS }}</td>
                </tr>
            {% else %}
                <tr>
                    <td>Aucun patient n'a été trouvé.</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}