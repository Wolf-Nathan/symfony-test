{% extends 'base.html.twig' %}

{% block title %}Consultation index{% endblock %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <h1 class="font-weight-light mb-4">Consultation index</h1>

            <table class="table table-striped">
                <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">DateHeure</th>
                    <th scope="col">actions</th>
                </tr>
                </thead>
                <tbody>
                {% for consultation in consultations %}
                    <tr>
                        <td>{{ consultation.id }}</td>
                        <td>{{ consultation.dateHeure ? consultation.dateHeure|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                            <a href="{{ path('consultation_show', {'id': consultation.id}) }}">show</a>
                            <a href="{{ path('consultation_edit', {'id': consultation.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="font-weight-light">Aucune consultation trouv√©e !</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('consultation_new') }}">Create new</a>
        </div>
    </div>
{% endblock %}
